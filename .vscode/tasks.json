{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Spectre",
            "type": "shell",
            "linux": {
                "command": "${workspaceFolder}/spectre/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/spectre"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Build Test",
            "type": "shell",
            "linux": {
                "command": "${worspaceFolder}/test/build.sh"
            },
            "options": {
                "cwd": "${workspaceFolder}/test"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        }
    ]
}